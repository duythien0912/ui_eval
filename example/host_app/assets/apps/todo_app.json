{
  "name": "TodoApp",
  "version": "1.0.0",
  "metadata": {
    "title": "Todo App",
    "description": "A simple todo list app",
    "author": "Mini App Developer"
  },
  "states": [
    {
      "key": "todos",
      "defaultValue": [],
      "type": "List<Map>"
    },
    {
      "key": "newTodoTitle",
      "defaultValue": "",
      "type": "String"
    }
  ],
  "actions": [
    {
      "name": "addTodo",
      "params": []
    },
    {
      "name": "toggleTodo",
      "params": [
        {
          "name": "index",
          "type": "int",
          "required": true
        }
      ]
    },
    {
      "name": "deleteTodo",
      "params": [
        {
          "name": "index",
          "type": "int",
          "required": true
        }
      ]
    },
    {
      "name": "updateTitle",
      "params": [
        {
          "name": "value",
          "type": "String",
          "required": true
        }
      ]
    }
  ],
  "root": {
    "type": "Scaffold",
    "appBar": {
      "type": "AppBar",
      "title": "My Todos",
      "backgroundColor": {
        "_color": 4278228616
      },
      "foregroundColor": {
        "_color": 4294967295
      }
    },
    "body": {
      "type": "Column",
      "children": [
        {
          "type": "Padding",
          "child": {
            "type": "Row",
            "children": [
              {
                "type": "Expanded",
                "child": {
                  "type": "TextField",
                  "hint": "What needs to be done?",
                  "onChanged": {
                    "_action": "updateTitle"
                  },
                  "obscureText": false,
                  "maxLines": 1
                },
                "flex": 1
              },
              {
                "type": "SizedBox",
                "width": 8.0
              },
              {
                "type": "ElevatedButton",
                "child": {
                  "type": "Text",
                  "data": "ADD",
                  "color": {
                    "_color": 4294967295
                  }
                },
                "onPressed": {
                  "_action": "addTodo"
                },
                "backgroundColor": {
                  "_color": 4278228616
                }
              }
            ],
            "mainAxisAlignment": 0,
            "crossAxisAlignment": 2,
            "mainAxisSize": 1
          },
          "padding": {
            "left": 16.0,
            "top": 16.0,
            "right": 16.0,
            "bottom": 16.0
          }
        },
        {
          "type": "Divider"
        },
        {
          "type": "Expanded",
          "child": {
            "type": "Center",
            "child": {
              "type": "Column",
              "children": [
                {
                  "type": "Icon",
                  "icon": {
                    "codePoint": 59500
                  },
                  "size": 64.0,
                  "color": {
                    "_color": 4288585374
                  }
                },
                {
                  "type": "SizedBox",
                  "height": 16.0
                },
                {
                  "type": "Text",
                  "data": "All caught up!",
                  "fontSize": 18.0,
                  "color": {
                    "_color": 4288585374
                  }
                },
                {
                  "type": "Text",
                  "data": "Add a task to get started",
                  "color": {
                    "_color": 4288585374
                  }
                }
              ],
              "mainAxisAlignment": 0,
              "crossAxisAlignment": 2,
              "mainAxisSize": 0
            }
          },
          "flex": 1
        }
      ],
      "mainAxisAlignment": 0,
      "crossAxisAlignment": 2,
      "mainAxisSize": 1
    },
    "floatingActionButton": {
      "type": "FloatingActionButton",
      "onPressed": {
        "_action": "addTodo"
      },
      "icon": {
        "codePoint": 57669
      },
      "backgroundColor": {
        "_color": 4278228616
      },
      "foregroundColor": {
        "_color": 4294967295
      },
      "tooltip": "Add Todo",
      "mini": false
    }
  }
}