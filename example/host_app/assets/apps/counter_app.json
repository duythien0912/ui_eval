{
  "name": "CounterApp",
  "version": "1.0.0",
  "metadata": {
    "title": "Counter",
    "description": "Simple counter example"
  },
  "states": [
    {"key": "count", "type": "int", "defaultValue": 0}
  ],
  "actions": [
    {"name": "increment"},
    {"name": "decrement"},
    {"name": "reset"}
  ],
  "root": {
    "type": "Scaffold",
    "appBar": {
      "type": "AppBar",
      "title": "Counter",
      "backgroundColor": {"_color": 4282339765},
      "foregroundColor": {"_color": 4294967295}
    },
    "body": {
      "type": "Center",
      "child": {
        "type": "Column",
        "mainAxisSize": 0,
        "children": [
          {"type": "Text", "data": "You have pushed the button this many times:", "color": {"_color": 4288585374}},
          {"type": "SizedBox", "height": 16},
          {"type": "Text", "data": "{{count}}", "fontSize": 72, "fontWeight": 6, "color": {"_color": 4282339765}},
          {"type": "SizedBox", "height": 32},
          {
            "type": "Row",
            "mainAxisAlignment": 2,
            "children": [
              {
                "type": "ElevatedButton",
                "onPressed": {"_action": "decrement"},
                "backgroundColor": {"_color": 4294922834},
                "child": {"type": "Icon", "icon": {"codePoint": 57671}, "color": {"_color": 4294967295}}
              },
              {"type": "SizedBox", "width": 16},
              {
                "type": "ElevatedButton",
                "onPressed": {"_action": "reset"},
                "backgroundColor": {"_color": 4288585374},
                "child": {"type": "Text", "data": "RESET", "color": {"_color": 4294967295}}
              },
              {"type": "SizedBox", "width": 16},
              {
                "type": "ElevatedButton",
                "onPressed": {"_action": "increment"},
                "backgroundColor": {"_color": 4283215696},
                "child": {"type": "Icon", "icon": {"codePoint": 57669}, "color": {"_color": 4294967295}}
              }
            ]
          }
        ]
      }
    },
    "floatingActionButton": {
      "type": "FloatingActionButton",
      "onPressed": {"_action": "increment"},
      "backgroundColor": {"_color": 4282339765},
      "child": {"type": "Icon", "icon": {"codePoint": 57669}}
    }
  }
}
